        "import json"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "def cargar_tareas():\n",
        "    try:\n",
        "        with open(\"tareas.json\", \"r\") as archivo:\n",
        "            return json.load(archivo)\n",
        "    except FileNotFoundError:\n",
        "        return []"
      ],
      "metadata": {
        "id": "s2ZjNvAO36xA"
      },
      "execution_count": 4,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def guardar_tareas(tareas):\n",
        "    with open(\"tareas.json\", \"w\") as archivo:\n",
        "        json.dump(tareas, archivo, indent=4)"
      ],
      "metadata": {
        "id": "VbmEFpmP5VNZ"
      },
      "execution_count": 5,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def añadir_tarea(tareas):\n",
        "  titulo = input(\"Introduce el título de la tarea: \")\n",
        "\n",
        "  tarea = {\n",
        "      \"titulo\": titulo,\n",
        "      \"completada\": False\n",
        "  }\n",
        "\n",
        "  tareas.append(tarea)\n",
        "  guardar_tareas(tareas)\n",
        "  print(\"Tarea añadida con éxito.\")"
      ],
      "metadata": {
        "id": "r516j9OD5r5T"
      },
      "execution_count": 6,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def mostrar_tareas(tareas):\n",
        "  if not tareas:\n",
        "    print(\"No hay tareas.\")\n",
        "  else:\n",
        "    print(\"\\n Lista de tareas:\")\n",
        "    for i, tarea in enumerate(tareas, start=1):\n",
        "      estado = \"Completada\" if tarea[\"completada\"] else \"No completada\"\n",
        "      print(f\"{i}. {tarea['titulo']} - {estado}\")"
      ],
      "metadata": {
        "id": "ZN53r1oV5_Wj"
      },
      "execution_count": 7,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def completar_tarea(tareas):\n",
        "    mostrar_tareas(tareas)\n",
        "    numero = int(input(\"Número de tarea a completar: \"))\n",
        "\n",
        "    if 1 <= numero <= len(tareas):\n",
        "        tareas[numero - 1][\"completada\"] = True\n",
        "        guardar_tareas(tareas)\n",
        "        print(\"Tarea completada\")\n",
        "    else:\n",
        "        print(\"Número inválido\")"
      ],
      "metadata": {
        "id": "4zS2Xrqe61zg"
      },
      "execution_count": 9,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def mostrar_menu():\n",
        "  print(\"\\n--- gestor de tareas json ---\")\n",
        "  print(\"1. Añadir tarea\")\n",
        "  print(\"2. Mostrar tareas\")\n",
        "  print(\"3. Completar tarea\")\n",
        "  print(\"4. Salir\")"
      ],
      "metadata": {
        "id": "J4C8dTGR7IOU"
      },
      "execution_count": 10,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def main():\n",
        "  tareas = cargar_tareas()\n",
        "  opcion = \"\"\n",
        "\n",
        "  while opcion != \"4\":\n",
        "    mostrar_menu()\n",
        "    opcion = input(\"Elige una opción: \")\n",
        "\n",
        "    if opcion == \"1\":\n",
        "      añadir_tarea(tareas)\n",
        "    elif opcion == \"2\":\n",
        "      mostrar_tareas(tareas)\n",
        "    elif opcion == \"3\":\n",
        "      completar_tarea(tareas)\n",
        "    elif opcion == \"4\":\n",
        "      print(\"¡Hasta luego!\")\n",
        "    else:\n",
        "      print(\"Opción inválida. Inténtalo de nuevo.\")"
      ],
      "metadata": {
        "id": "vOBQArA571m7"
      },
